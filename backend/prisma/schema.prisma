generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  NEW
  FOLLOW_UP
  CUSTOMER
  ARCHIVED
}

model Contact {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  phone      String?
  company    String?
  status     Status   @default(NEW)
order      Int      @default(0)
  note       String?
  createdAt  DateTime @default(now())
  activities Activity[]
  user       User?    @relation(fields: [userId], references: [id])
  userId     Int?
}

model Activity {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now())
  contact     Contact  @relation(fields: [contactId], references: [id])
  contactId   Int
}

model User {
  id         Int      @id @default(autoincrement())
  email      String    @unique
  password   String
  contacts   Contact[]
}
